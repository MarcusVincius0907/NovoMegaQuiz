<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:orientation="vertical"
    android:id="@+id/fundo"
    android:background="@color/colorFundo"


    tools:context="com.example.patricialeite.novomegaquiz.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >





        <ImageView
            android:layout_width="130dp"
            android:layout_height="70dp"
            android:id="@+id/btnVoltarMain"
            android:src="@drawable/btnvoltar"
            android:layout_marginTop="20dp"

            />

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/imgCrn"
            android:src="@drawable/cronometro"

            android:layout_gravity="center"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/crn"
            android:textSize="18dp"
            android:text="600"
            android:textColor="@color/colorLetra"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="-78dp"


            />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imgMoeda"
            android:src="@drawable/moeda"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"

            />
        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/moeda"
            android:textSize="18dp"
            android:text="10"
            android:textColor="@color/colorLetra"
            android:layout_marginLeft="-60dp"
            android:layout_marginTop="60dp"
            />





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_gravity="center"

        >

    <ImageView
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:id="@+id/imgQuestao"
        android:src="@drawable/questao"


        />


        <ImageView
            android:layout_width="130dp"
            android:layout_height="70dp"
            android:id="@+id/imgCategoria"
            android:src="@drawable/categoria"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="-120dp"


            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numeroQ"
            android:textSize="18dp"
            android:text="1"
            android:textColor="@color/colorLetra"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="-20dp"


            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:id="@+id/Cat"
            android:textSize="20dp"
            android:text="categoria"
            android:textColor="@color/colorLetra"
            android:layout_marginTop="64dp"
            android:layout_marginLeft="10dp"
            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/btnDica"
            android:src="@drawable/btndica"
            />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center"

            >



            <TextView
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:id="@+id/dica5"
                android:textSize="18dp"
                android:text="dica"
                android:textColor="@color/colorLetra"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:background="@drawable/dica"
                android:textAlignment="center"

                />



            <TextView
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:id="@+id/dica3"
                android:textSize="18dp"
                android:text="dica"
                android:textColor="@color/colorLetra"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:background="@drawable/dica"
                android:textAlignment="center"

                />

            <TextView
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:id="@+id/dica1"
                android:textSize="18dp"
                android:text="dica"
                android:textColor="@color/colorLetra"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="1dp"
                android:paddingRight="10dp"
                android:background="@drawable/dica"
                android:textAlignment="center"

                />


            <TextView
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:id="@+id/dica2"
                android:textSize="18dp"
                android:text="dica"
                android:textColor="@color/colorLetra"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="1dp"
                android:paddingRight="10dp"
                android:background="@drawable/dica"
                android:textAlignment="center"

                />


            <TextView
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:id="@+id/dica4"
                android:textSize="18dp"
                android:text="dica"
                android:textColor="@color/colorLetra"
                android:layout_gravity="center"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="1dp"
                android:paddingRight="10dp"
                android:background="@drawable/dica"
                android:textAlignment="center"

                />









        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"

            >


            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/btnAudio"
                android:src="@drawable/btnmicrofone"



                />

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/resposta"

                android:layout_marginTop="4dp"
                />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/btnValidar"
                android:src="@drawable/btnok"


                />




        </LinearLayout>

    </LinearLayout>


</LinearLayout>
